{
  "name": "ai-review-tool",
  "publisher": "ai-review-tool",
  "displayName": "AI Code Review Tool",
  "description": "利用 AI 自动审查代码、提供质量反馈和改进建议",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ai-review-tool.reviewCode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-review-tool.reviewCode",
        "title": "AI Review Code"
      },
      {
        "command": "ai-review-tool.reviewFile",
        "title": "AI 审查当前文件代码"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "ai-review-tool.reviewCode",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "ai-review-tool.reviewFile",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AI Code Review Tool",
      "properties": {
        "aiReviewTool.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API 密钥",
          "scope": "application"
        },
        "aiReviewTool.model": {
          "type": "string",
          "default": "gpt-4-turbo",
          "enum": [
            "gpt-4-turbo",
            "gpt-4",
            "gpt-3.5-turbo"
          ],
          "description": "AI 模型",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc",
    "watch":   "tsc -w",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "openai": "^4.20.0",
    "path": "^0.12.7",
    "tencentcloud-sdk-nodejs-hunyuan": "^4.1.18"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.2"
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
  "include": ["src"]
}
